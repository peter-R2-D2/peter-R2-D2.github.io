---
import { bio } from "../../data/bio.js";
---

<div class="max-w-screen-md mx-auto">
  <h2 class="text-2xl mb-3">
    <span class="border-b-4 border-coffee-light"> Bio </span>
  </h2>

  <ol class="relative border-s border-gray-200">
    {
      bio.map((item) => {
        return (
          <li class="mb-10 ms-4">
            <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white" />
            <time class="mb-1 text-sm font-normal leading-none text-gray-200">
              {item.date}
            </time>
            <h3 class="text-base font-semibold">{item.title}</h3>
            <p class="text-sm text-gray-300">{item.job}</p>
          </li>
        );
      })
    }
  </ol>
</div>
