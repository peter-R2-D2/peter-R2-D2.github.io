---
import { links } from "../../data/navbar.js";
---

<nav
  class="flex items-center justify-between h-[100px] max-w-screen-md mx-auto"
>
  <div class="bg-coffee-light px-6 py-3 rounded-lg">
    <div class="flex items-center gap-2">
      <span
        class="material-symbols-outlined hover:rotate-45 ease-out duration-200"
      >
        local_cafe
      </span>
      <span class="text-[16px]"> Arturo Farias </span>
    </div>
  </div>
  <ul class="flex gap-5 bg-coffee-light px-4 py-3 rounded-lg">
    {
      links.map((navegation) => {
        return (
          <li class="text-[16px] cursor-pointer hover:bg-coffee-regular hover:rounded-lg px-2">
            <a href={navegation.link}>{navegation.name}</a>
          </li>
        );
      })
    }
  </ul>
</nav>
